{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "lib": ["es2017", "esnext.asynciterable", "dom", "es5", "es6", "es2015"],
    "target": "es2017"
  },
  "exclude": ["node_modules", "dist"]
}
